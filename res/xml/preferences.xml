<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory 
		android:title="Settings"
		android:key="first_category">
		
		<CheckBoxPreference 
		    android:id="@+id/night_mode_checkbox"
			android:key="night_mode"
			android:summary="Enable or disable night mode"
			android:title="Enable Night Mode" 
			android:defaultValue="false"	/>
		
        <ListPreference 
			android:key="language_key"
			android:summary="Chocie of language mode"
			android:title="Language Mode"
            android:defaultValue="1000"
            android:entries="@array/updateInterval"
            android:entryValues="@array/updateIntervalValues"   /> 
            
        <EditTextPreference
	            android:key="time_usage_key"
	            android:title="7 Day Usage"
	            android:summary="A total of usage of 7 days." />

	</PreferenceCategory>
	
</PreferenceScreen>
